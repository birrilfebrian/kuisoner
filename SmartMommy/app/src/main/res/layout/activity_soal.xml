<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_accsreg"
    tools:context=".soal.SoalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_jenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comicsansms"
                android:text="Questionnaire"
                android:background="@color/buttonColorPastel"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_soal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hide_bottom_view_on_scroll_behavior"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_jenis" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ya"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/buttonColorPastel"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_soal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tidak"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/buttonColorPastel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_soal"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>