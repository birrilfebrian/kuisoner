<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_accsreg"
    tools:context=".suster.HomeSuster">

    <ImageView
        android:id="@+id/imgSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_logout_24"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/Red"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@color/grayText"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSignOut"
        app:layout_constraintStart_toEndOf="@+id/imgSignOut"
        app:layout_constraintTop_toTopOf="@+id/imgSignOut" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/suster"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView5"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView5"
        app:layout_constraintStart_toStartOf="@+id/circleImageView5"
        app:layout_constraintTop_toTopOf="@+id/circleImageView5" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/neutrifpro_medium"
        android:text="Suster"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSignOut"
        app:layout_constraintStart_toEndOf="@+id/circleImageView5"
        app:layout_constraintTop_toTopOf="@+id/imgSignOut" />


    <ImageView
        android:id="@+id/imgMenuVaccine"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/vaccine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView5" />

    <TextView
        android:id="@+id/tvTitleVaccine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neutrifpro_medium"
        android:text="Immunization"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imgMenuVaccine"
        app:layout_constraintStart_toStartOf="@+id/imgMenuVaccine"
        app:layout_constraintTop_toBottomOf="@+id/imgMenuVaccine" />

    <ImageView
        android:id="@+id/imgHistoVaccine"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/historyvaccine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleVaccine" />

    <TextView
        android:id="@+id/tvTitleHistoVaccine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neutrifpro_medium"
        android:text="History Immunization"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imgHistoVaccine"
        app:layout_constraintStart_toStartOf="@+id/imgHistoVaccine"
        app:layout_constraintTop_toBottomOf="@+id/imgHistoVaccine" />

</androidx.constraintlayout.widget.ConstraintLayout>